{% extends model('component') %}

{% define config = {
    name: 'order-custom-reference-view',
} %}

{% define data = {
    title: 'order_custom_reference.title' | trans,
    orderCustomReference: required,
} %}

{% set classTitle = '' %}
{% set classText = 'text-break' %}

{% block body %}
    {% block title %}
        <h5 class="{{ classTitle }}">{{ data.title }}</h5>
    {% endblock %}

    {% set isOrderCustomReference = data.orderCustomReference is defined and data.orderCustomReference %}
    {% if isOrderCustomReference %}
    {% block textWrapper %}
        <p class="{{ classText }}">
            {% block text %}
                {{ data.orderCustomReference | escape | nl2br }}
            {% endblock %}
        </p>
    {% endblock %}
    {% endif %}
{% endblock %}
