{% extends model('component') %}

{% define config = {
    name: 'order-readonly-order-custom-reference',
} %}

{% define data = {
    order: required,
} %}

{% block body %}
    {% if data.order.orderCustomReference is not empty %}
        {% block readonlyOrderCustomReference %}
            <h6 class="{{ config.name }}__title">{{ 'order_custom_reference.reference' | trans }}</h6>
            <p class="spacing spacing--reset">{{ data.order.orderCustomReference | escape | nl2br }}</p>
        {% endblock %}
    {% endif %}
{% endblock %}
